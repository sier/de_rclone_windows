{
  "name": "de_rclone",
  "version": "1.2.6",
  "description": "Rclone GUI Manager",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madroots/de_rclone.git"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "madroots",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.derclone.manager",
    "productName": "de_rclone",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "icon": "icon.png"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "icon.png",
      "sign": false,
      "certificateFile": null
    },
    "files": [
      "**/*",
      "renderer/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "madroots",
        "repo": "de_rclone"
      }
    ]
  }
}