{
  "name": "de_rclone",
  "version": "1.0.0",
  "description": "Rclone GUI Manager",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Antigravity",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.derclone.manager",
    "productName": "de_rclone",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "icon": "icon.png"
    },
    "files": [
      "**/*",
      "renderer/**/*"
    ]
  }
}
